{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/es5",
    "target": "es5",
    "typeRoots": ["./node_modules/@types/"]
  },
  "exclude": [
    "node_modules",
    "scripts"
  ]
}